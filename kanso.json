{
    "name": "my-path",
    "version": "0.0.1",
    "description": "Your most acurate journal.",
    "long_description": "My Path lets you keep a history of things that happen to you, with an easy to use workflow. Here is how it works.\n\n - When something memorable happens, micro-tag it. We provide a way to tag the event with as little friction as possible.\n - Later that day, you can review your events and add extra information. The who, what, where.\n - We also provide a wiki like diary page to summarize the day.\n\n\nYou will be supprised by two things. First, The number of events that occur to you over the day. Second, how much you will be able to recall by such a system.",
    "url": "https://github.com/eckoit/my-path",
    "categories": ["productivity", "journal"],
    "flattr_user_id" : "eckoit",
    "attachments": ["css", "img", "jam", "js",  "index.html", "application.appcache", "templates", "webstart"],
    "modules": ["couch", "views"],
    "load": "couch/ddoc",

    "icons": {
        "16": "img/promo/icon_16.png",
        "48": "img/promo/icon_48.png",
        "96": "img/promo/icon_96.png",
        "128": "img/promo/icon_128.png"
    },
    "promo_images": {
        "small": "img/promo/promo_small.png"
    },
    "screenshots": [
        "img/promo/screenshot1.png",
        "img/promo/screenshot2.png"
    ],
    "less": {
        "compile": [ "css/app.less" ]
    },
    "cache_manifests": [
            "application.appcache"
        ],
    "jam" : {
        "include" : [
            "js/app",
            "js/AudioTrack",
            "js/date_utils",
            "js/ImageTrack",
            "js/JournalTrack",
            "js/position",
            "js/quick",
            "js/reference",
            "js/scales",
            "js/ScrapbookTrack",
            "js/ServiceTrack",
            "js/TagTrack",
            "js/timeline",
            "js/Track",
            "domReady",
            "jam/bootstrap/js/bootstrap-tooltip",
            "jam/bootstrap/js/bootstrap-popover"
        ]
    },
    "settings_schema" : {
        "description": "My-Path Settings",
        "type": "object",
        "properties": {
            "Services": {
                "title": "External Data Services",
                "type": "array",
                "items": {
                    "type": "object",
                    "order": ["service", "user"],
                    "required": ["service", "user"],
                    "properties": {
                        "service": {
                            "type": "string",
                            "enum" : ["bitbucket","bitly","blogger","citeulike","dailymotion","delicious","deviantart","dribbble",
                                      "facebook_page","flickr","foomark","formspring","forrst","foursquare","gimmebar","github","googleplus",
                                       "googlereader","hypem","instapaper","iusethis","lastfm","librarything","miso","mlkshk",
                                       "pinboard","posterous","quora","reddit","rss","slideshare","snipplr","stackoverflow",
                                       "tumblr","twitter","vimeo","wikipedia","wordpress","youtube","zotero"]
                        },
                        "user": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "person_schema": {
        "type": "object",
        "properties": {

            "first_name" : {
                "title": "First Name",
                "type": "string"
            },
            "last_name": {
                "title": "Last Name",
                "type": "string"
            },
            "email": {
                "title": "Email",
                "type": "string"
            },
            "birthday": {
                "type": "object",
                "properties": {
                    "month": {
                        "type": "string",
                        "enum": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
                    },
                    "day": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 31
                    },
                    "year": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 9999
                    }
                }
            }
        }
    },
    "dependencies": {
        "modules": null,
        "attachments": null,
        "properties": null,
        "underscore": null,
        "less-precompiler": "1.3.0-kanso.7",
        "cache-manifest-timestamp": null,
        "git-info" : null,
        "kanso-jam" : null
    }
}